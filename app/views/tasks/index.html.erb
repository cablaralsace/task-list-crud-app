<h1 class="index-header"> Task List </h1>

<div class="index-table">
<table>
  <thead class="index-table-headers">
    <tr>
      <th class="index-header-id"> Task ID </th>
      <th class="index-header-player"> Person </th>
      <th class="index-header-username"> Overview </th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <div class="td-elements">
        <td class="index-element-id"> <%= task.id %> </td>
        <td class="index-element-title"> <%= task.person %> </td>
        <td class="index-element-body"> <%= task.overview %> </td>
        </div>
        <td>
          <button class= "index-btn">
            <%= link_to "Edit", task_edit_path(task.id) %>
          </button>
        </td>

        <td>
          <button class= "index-btn">
            <%= link_to "View", task_show_path(task.id) %>
          </button>
        </td>

        <td>
          <button class= "index-btn">
            <%= link_to "Delete", task_delete_path(task.id), method: :delete %>
          </button>
        </td>
      </tr>
    <% end %>

    <tr>
      <td>
        <button class= "index-new-btn">
          <%= link_to "New Task", task_new_path %>
        </button>
      </td>
    </tr>
  </tbody>
</table>
</div>